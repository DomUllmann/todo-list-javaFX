               </children>
            </AnchorPane>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
               <children>
                  <ListView fx:id="taskListDone" layoutY="28.0" onMouseClicked="#doneListClicked" prefHeight="231.0" prefWidth="960.0" />
